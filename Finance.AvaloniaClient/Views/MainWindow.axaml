<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Finance.AvaloniaClient.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Finance.AvaloniaClient.Views"
		xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Finance.AvaloniaClient.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Finance.AvaloniaClient">
	<Grid RowDefinitions="Auto, *, Auto">

		<!--Title bar-->
		<Grid Grid.Row="0" Background="Orange" Height="40" ColumnDefinitions="Auto, Auto, *, Auto, Auto">
			<Rectangle Grid.Column="0" Fill="Red" Width="40"/>
			<Rectangle Grid.Column="1" Fill="Green" Width="40"/>
			<TextBlock Text="{Binding BuldTitle}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" FontWeight="Black"/>
			<Rectangle Grid.Column="3" Fill="Blue" Width="40"/>
			<Rectangle Grid.Column="4" Fill="Yellow" Width="40"/>
		</Grid>

		<!--Main area-->
		<Grid Grid.Row="1" Background="Gray" ColumnDefinitions="Auto, Auto, *">

			<StackPanel Grid.Column="0" Width="120" Background="Purple">
				<TextBlock Text="Доходы" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" FontSize="16"/>
				<TextBlock Grid.Column="0" Text="Расходы" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" FontSize="16"/>
				<TextBlock Text="Сбережения" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" FontSize="16"/>
			</StackPanel>

			<StackPanel Grid.Column="1" Width="120" Background="BlueViolet">
				<TextBlock Text="{Binding Income}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10" FontSize="16"/>
				<TextBlock Text="{Binding Expense}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10" FontSize="16"/>
				<TextBlock Text="{Binding Savings}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10" FontSize="16"/>
			</StackPanel>

			<Grid Grid.Column="2" RowDefinitions="*, Auto">
				<lvc:CartesianChart Grid.Row="0"
						Series="{Binding Series}"
						XAxes="{Binding XAxes}">
				</lvc:CartesianChart>
				<Grid Grid.Row="1" ColumnDefinitions="Auto, *, Auto"  Height="50" Background="Black">
					<Button Grid.Column="0"  Content="&lt;" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10"/>
					<TextBlock Grid.Column="1" Text="{Binding CurrentMonth}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" FontSize="16"/>
					<Button Grid.Column="2" Command="{Binding NextMonthCommand}" Content="&gt;" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10"/>
				</Grid>
			</Grid>
			

		</Grid>

		<!--Bottom bar-->
		<Grid Grid.Row="2" Background="White" ColumnDefinitions="Auto, Auto,* Auto, Auto, Auto" Margin="5">
			<Button Content="нАЖМИ"/>
		</Grid>


	</Grid>
</Window>
